<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdgcatania.info.studyjamattendance.details_user.DetailsFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="?attr/colorPrimary"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="User details email"
                android:id="@+id/fragment_details_email_textview"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fragment_detail_name_textview"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingLeft="50dp"
                android:gravity="top" />
        </LinearLayout>
    </android.support.v7.widget.CardView>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailsFragment"
        android:layout_below="@+id/card_view">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_details_list_lessons"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </FrameLayout>


</RelativeLayout>

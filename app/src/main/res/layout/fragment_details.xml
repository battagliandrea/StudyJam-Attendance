<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdgcatania.info.studyjamattendance.details_user.DetailsFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User details name"
                android:id="@+id/fragment_detail_name_textview"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User details email"
                android:id="@+id/fragment_details_email_textview"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fragment_detail_name_textview"
                android:layout_alignParentLeft="true" />
        </LinearLayout>
    </android.support.v7.widget.CardView>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailsFragment"
        android:layout_below="@+id/card_view">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_details_list_lessons"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fragment_details_add_lesson_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@mipmap/ic_action_register"
            fab:fab_colorNormal="@color/blue"
            fab:fab_colorPressed="@color/darkblue"
            fab:fab_colorRipple="@color/darkblue" />

    </FrameLayout>


</RelativeLayout>
